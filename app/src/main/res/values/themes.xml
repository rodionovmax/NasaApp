        <item name="themeFontStyle">@font/comicvaganza</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mars_primary</item>
        <item name="colorPrimaryVariant">@color/mars_dark</item>
        <item name="colorOnPrimary">@color/mars_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mars_secondary_primary</item>
        <item name="colorSecondaryVariant">@color/mars_secondary_dark</item>
        <item name="colorOnSecondary">@color/mars_secondary_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="primaryFontColor">@color/font_mars</item>
        <item name="android:textColor">@color/font_mars</item>
        <item name="iconFillColor">?attr/colorOnSecondary</item>
        <item name="chipStrokeColorUnchecked">?attr/primaryFontColor</item>
        <item name="chipStrokeColorChecked">?attr/colorPrimaryVariant</item>
        <item name="chipFontUnchecked">?attr/primaryFontColor</item>
        <item name="chipFontChecked">?attr/colorPrimaryVariant</item>
        <item name="wikiHintColor">@color/font_mars</item>
        <item name="wikiHintColorChecked">@color/font_mars</item>
        <item name="wikiHintColorUnchecked">@color/wiki_hint_mars_unchecked</item>
        <item name="fabColor">@color/fab_mars</item>
        <item name="bottomNavMenuColor">?attr/colorPrimaryVariant</item>
