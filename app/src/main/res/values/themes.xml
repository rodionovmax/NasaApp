<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Space" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Font -->
        <item name="android:fontFamily">?attr/themeFontStyle</item>
        <item name="themeFontStyle">@font/robosapien</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/space_primary</item>
        <item name="colorPrimaryVariant">@color/space_dark</item>
        <item name="colorOnPrimary">@color/space_light</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/space_secondary_primary</item>
        <item name="colorSecondaryVariant">@color/space_secondary_dark</item>
        <item name="colorOnSecondary">@color/space_secondary_light</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="primaryFontColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="iconFillColor">?attr/colorOnSecondary</item>
        <item name="chipStrokeColorUnchecked">?attr/primaryFontColor</item>
        <item name="chipStrokeColorChecked">?attr/colorPrimaryVariant</item>
        <item name="chipFontUnchecked">?attr/primaryFontColor</item>
        <item name="chipFontChecked">?attr/colorPrimaryVariant</item>
        <item name="wikiHintColor">@color/wiki_hint_space_checked</item>
        <item name="wikiHintColorChecked">@color/wiki_hint_space_checked</item>
        <item name="wikiHintColorUnchecked">@color/wiki_hint_space_unchecked</item>
        <item name="fabColor">@color/fab_space</item>
        <item name="bottomNavMenuColor">?attr/colorPrimaryVariant</item>
    </style>

