<resources>

    <!-- Base application theme. -->
    <style name="NasaTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="AppToolbar">
        <item name="android:backgroundTint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ScreenBackground">
        <item name="android:background">?attr/colorSecondaryVariant</item>
    </style>

    <style name="CustomTextView">
        <item name="android:textColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="android:buttonTint">?attr/colorOnSecondary</item>
        <item name="android:textColor">?attr/primaryFontColor</item>
    </style>

    <style name="Chip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_background_color</item>
        <item name="chipStrokeColor">@color/chip_stroke_color</item>
        <item name="chipStrokeWidth">@dimen/stroke_1dp</item>
        <item name="android:textColor">@color/chip_font_color</item>
        <item name="android:textAppearance">@style/ChipText</item>
    </style>

    <style name="WikiTextInput" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">?attr/wikiHintColor</item>
        <item name="boxStrokeColor">@color/wiki_text_input_outline_color</item>
        <item name="helperTextTextColor">?attr/wikiHintColor</item>
        <item name="hintTextColor">?attr/wikiHintColor</item>
    </style>

    <style name="CounterText" parent="TextAppearance.Design.Counter">
        <item name="android:textColor">?attr/primaryFontColor</item>
    </style>

    <style name="ChipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">?attr/themeFontStyle</item>
    </style>

    <style name="styledToast">
        <item name="android:fontFamily">?attr/themeFontStyle</item>
    </style>

    <style name="bottomNavMenu">
        <item name="itemTextColor">?attr/bottomNavMenuColor</item>
        <item name="itemIconTint">?attr/bottomNavMenuColor</item>
    </style>

</resources>
